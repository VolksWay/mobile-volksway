<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#12264B"
        android:padding="25dp"

>

    <TextView
            android:text="Checklist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_checklist"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_medium"
            android:textSize="35sp"
           app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
    />


    <TextView
            android:text="Ar Condicionado"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:id="@+id/text_ar"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_medium"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_checklist"
            app:layout_constraintEnd_toStartOf="@+id/imageView2" android:layout_marginTop="40dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginStart="10dp"/>
    <ImageView
            android:layout_width="42dp"
            android:layout_height="36dp"
            app:srcCompat="@drawable/baseline_check_box_24"
            android:id="@+id/imageView1"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            android:layout_marginTop="40dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="25dp"/>


    <TextView
            android:text="Freios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_Freios"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_medium"
            android:textSize="25sp"
            app:layout_constraintTop_toBottomOf="@+id/text_Documentos"
            app:layout_constraintEnd_toStartOf="@+id/imageView3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="40dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="10dp"/>
    <ImageView
            android:layout_width="42dp"
            android:layout_height="36dp"
            app:srcCompat="@drawable/baseline_check_box_24"
            android:id="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="25dp"
            app:layout_constraintTop_toBottomOf="@+id/text_checklist" android:layout_marginTop="40dp"/>

    <TextView
            android:text="Documentos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_Documentos"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_medium"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/text_ar" android:layout_marginTop="32dp"
            app:layout_constraintEnd_toStartOf="@+id/imageView1" android:layout_marginStart="10dp"/>
    <ImageView
            android:layout_width="42dp"
            android:layout_height="36dp"
            app:srcCompat="@drawable/baseline_check_box_24"
            android:id="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="25dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView1" android:layout_marginTop="40dp"/>
    <TextView
            android:text="Combustivel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_Combustivel"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_medium"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_Oleo"
            app:layout_constraintEnd_toStartOf="@+id/imageView5" android:layout_marginTop="36dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginStart="10dp"/>
    <ImageView
            android:layout_width="42dp"
            android:layout_height="36dp"
            app:srcCompat="@drawable/baseline_check_box_24"
            android:id="@+id/imageView4"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/imageView3"
            android:layout_marginTop="40dp" android:layout_marginEnd="25dp"/>
    <TextView
            android:text="Oleo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_Oleo"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_medium"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_Freios"
            app:layout_constraintEnd_toStartOf="@+id/imageView4" android:layout_marginTop="40dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginStart="10dp"/>
    <ImageView
            android:layout_width="42dp"
            android:layout_height="36dp"
            app:srcCompat="@drawable/baseline_check_box_24"
            android:id="@+id/imageView5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="25dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" android:layout_marginTop="40dp"/>

    <TextView
            android:text="Rota Completa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_Rota"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_medium"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_Peneu" app:layout_constraintEnd_toStartOf="@+id/imageView7"
            android:layout_marginTop="36dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginEnd="25dp" android:layout_marginStart="10dp"/>
    <ImageView
            android:layout_width="42dp"
            android:layout_height="36dp"
            app:srcCompat="@drawable/baseline_check_box_24"
            android:id="@+id/imageView6"
            app:layout_constraintTop_toBottomOf="@+id/imageView5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp" android:layout_marginEnd="25dp"/>

    <TextView
            android:text="Pneu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_Peneu"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_medium"
            android:textSize="25sp"
            app:layout_constraintTop_toBottomOf="@+id/text_Combustivel"
            android:layout_marginTop="36dp" app:layout_constraintEnd_toStartOf="@+id/imageView6"
            android:layout_marginEnd="200dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp" app:layout_constraintHorizontal_bias="0.0"/>


    <ImageView
            android:layout_width="42dp"
            android:layout_height="36dp"
            app:srcCompat="@drawable/baseline_check_box_24"
            android:id="@+id/imageView7"
            app:layout_constraintTop_toBottomOf="@+id/imageView6" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="56dp" android:layout_marginEnd="25dp"/>


    <ImageView
            android:layout_width="41dp"
            android:layout_height="46dp"
            app:srcCompat="@drawable/camera"
            android:id="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/text_Rota" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="50dp"
            app:layout_constraintVertical_bias="0.508" android:layout_marginStart="10dp"/>
    <TextView
            android:text="Imagem do Pneus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_ImagemPneu"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_medium"
            android:textSize="23sp"
            app:layout_constraintTop_toBottomOf="@+id/text_Rota"
            android:layout_marginTop="92dp" app:layout_constraintStart_toEndOf="@+id/imageView"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/imageView8"
            app:layout_constraintHorizontal_bias="0.083"/>
    <ImageView
            android:layout_width="42dp"
            android:layout_height="36dp"
            app:srcCompat="@drawable/baseline_check_box_24"
            android:id="@+id/imageView8"
            app:layout_constraintTop_toBottomOf="@+id/imageView6" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="140dp" android:layout_marginEnd="24dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="50dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>